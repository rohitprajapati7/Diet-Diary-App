<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <gradient android:angle="0" android:startColor="#FFD700" android:endColor="#FFD700"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <solid android:color="#FF6347"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <gradient android:angle="0" android:startColor="#FFD700" android:endColor="#FF6347" />
        </shape>
    </item>
</selector>